<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <h2 class="text-center text-success mb-4">Booking Confirmation</h2>

    <div class="row">
      <!-- Left Side: Booking Info -->
      <div class="col-md-8">
        <p><strong>Username:</strong> <%= booking.user.username %></p>
        <p><strong>Listing:</strong> <%= booking.listing.title %></p>
        <p><strong>Check-in:</strong> <%= booking.checkIn.toDateString() %></p>
        <p><strong>Check-out:</strong> <%= booking.checkOut.toDateString() %></p>
        <p><strong>Total Price:</strong> â‚¹<%= booking.totalAmount %></p>

      </div>

      <!-- Right Side: Buttons -->
      <div class="col-md-4 d-flex flex-column justify-content-center align-items-center">
        <a href="/listings/booking/<%= booking._id %>/download-pdf" class="btn btn-outline-primary w-100 mb-3">
          Download PDF
        </a>
        <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-dark w-100">
          Back to Listing
        </a>
      </div>
    </div>
  </div>
</div>
